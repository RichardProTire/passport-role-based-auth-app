<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Home</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <% if (currentUser) { %>
    <h1>Welcome, <%= currentUser.first_name %> <%= currentUser.last_name %>!</h1>

    <div class="action-buttons">
        <a href="/messages/new">âœï¸ Create Post</a>
        <% if (!currentUser.membership_status) { %>
          <a href="/join-club">ğŸ” Join the Club</a>
        <% } %>
        <% if (!currentUser.is_admin) { %>
            <a href="/become-admin" class="btn">ğŸ‘‘ Become an Admin</a>
        <% } %> 
        <button id="themeToggle" class="btn">ğŸŒ“ Dark Mode</button>
        <a href="/log-out">ğŸšª Log Out</a>
    </div>
      

    <h2>ğŸ“¢ Messages</h2>
    <% messages.forEach(msg => { %>
      <div class="message-card">
        <strong><%= msg.title %></strong><br />
        <p><%= msg.content %></p>
        <% if (currentUser.membership_status) { %>
          <em>Posted by <%= msg.first_name %> <%= msg.last_name %> on <%= new Date(msg.created_at).toLocaleString() %></em>
        <% } else { %>
          <em>(Join the club to see who posted this)</em>
        <% } %>
        <% if (currentUser.is_admin) { %>
            <form action="/messages/<%= msg.id %>/delete" method="POST" class="delete-form">
                <button type="submit" onclick="return confirm('Are you sure?')">ğŸ—‘ï¸ Delete</button>
            </form>      
        <% } %>
      </div>
    <% }) %>

  <% } else { %>
    <h1>Login</h1>
    <form action="/log-in" method="POST">
      <label for="username">Email</label>
      <input id="username" name="username" type="email" required />

      <label for="password">Password</label>
      <input id="password" name="password" type="password" required />

      <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a href="/sign-up">Sign up</a></p>
  <% } %>
  <script src="/theme-toggle.js"></script>
</body>
</html>
